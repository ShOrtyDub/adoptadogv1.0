{% extends 'base.html.twig' %}

{% block title %}Les Dogs{% endblock %}

{% block body %}
    <main>
        <!--        Logo        -->
        <div class="text-center mt-3">
            <img src="{{ asset('assets/img/patte.webp') }}" width="150rem" alt="Logo Adopt a Dog">
        </div>
        <!--        ! Logo        -->

        <!--        Titre        -->
        <h1 class="text-center mt-5 titre">Les dogs</h1>
        <!--        ! Titre        -->

        <!--        Intro        -->
        <p class="text-center mt-5 intro">Voici nos amis qui attendent un nouveau foyer.</p>
        <!--        ! Intro        -->

        <!--        Btn retour accueil        -->
        <div class="mt-5 btnNav">
            <a class="profil" href="{{ path('app_main') }}">Accueil</a>
        </div>
        <!--        ! Btn retour accueil        -->

        <!--        Liste des chiens        -->
        <div class="flex">
            {% for chien in chiens %}
                <!--        Fiche du chien        -->
                <div class="fiche">
                    <div class="text-center pt-4 pb-4">
                        <img src="{{ chien.photo }}" alt="photo du chien" width="500">
                    </div>

                    <div>
                        <div class="p-2"><strong>Nom:</strong> {{ chien.nom }}</div>
                        <div class="p-2"><strong>Sexe:</strong> {{ chien.sexe }}</div>
                        <div class="p-2"><strong>Age:</strong> {{ chien.age }}</div>
                        <div class="p-2"><strong>Race:</strong> {{ chien.race }}</div>
                        <div class="p-2"><strong>Couleur dominante:</strong> {{ chien.couleur }}</div>
                        <div class="p-2"><strong>Taille:</strong> {{ chien.taille }} cm</div>
                        <div class="p-2"><strong>Poids:</strong> {{ chien.poids }} kg</div>
                        <div class="p-2"><strong>Caract√®re:</strong> {{ chien.caractere }}</div>
                        <div class="p-2"><strong>Description:</strong> {{ chien.description }}</div>
                    </div>

                    <!--        Btn Voir        -->
                    <div class="text-center mt-3">
                        <a class="profil" href="{{ path('app_chien_show', {'id': chien.id}) }}">Voir</a>
                    </div>
                    <!--        ! Btn Voir        -->
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
