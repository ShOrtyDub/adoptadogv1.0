                <a href="{{ path('app_chien_index') }}">Voir les chiens</a>
            {% endif %}
        </div>
        <!--        ! Bienvenu        -->

        <!--        Trouver son Match        -->
        <div class="text-center match">
            <h2>Trouver son macth ?!</h2>
            <p>
                Vous voulez faire une recherche pour voir avec quels chiens vous matchez ?
            </p>
            {% if not app.user %}
                <a href="{{ path('app_login') }}">Voir les correspondances</a>
            {% endif %}
            {% if app.user %}
                <a href="{{ path('app_correspondance_index', {'id': app.user.id}) }}">Voir les correspondances</a>
            {% endif %}
        </div>
        <!--        ! Trouver son Match        -->


        <!--        Voir son profil        -->
        {% if app.user %}
            <div class="text-center profil">
                <a href="{{ path('app_utilisateur_show', {'id': app.user.id}) }}">Modifier mon profil</a>
            </div>
        {% endif %}
        <!--        ! Voir son profil        -->
    </main>

